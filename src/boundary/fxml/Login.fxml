<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="boundary.LoginScreen">
   <children>
      <HBox alignment="CENTER" prefHeight="280.0" prefWidth="600.0" style="-fx-background-color: #102a50;" styleClass="background">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <ImageView fx:id="imageView" fitHeight="150.0" fitWidth="545.0" pickOnBounds="true" preserveRatio="true" />
            <Region HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <Region prefHeight="14.0" prefWidth="600.0" VBox.vgrow="ALWAYS" />
      <HBox prefHeight="16.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Username" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="20.0" />
               </font></Label>
            <Region HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox prefHeight="26.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
         <children>
            <Region prefHeight="200.0" prefWidth="219.5" HBox.hgrow="ALWAYS" />
            <TextField fx:id="usernameInput" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="18.0" />
               </font></TextField>
            <Region prefHeight="200.0" prefWidth="219.5" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <Region prefHeight="18.0" prefWidth="600.0" VBox.vgrow="ALWAYS" />
      <HBox prefHeight="16.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Password" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="20.0" />
               </font></Label>
            <Region HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox prefHeight="26.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
         <children>
            <Region prefHeight="200.0" prefWidth="219.5" HBox.hgrow="ALWAYS" />
            <PasswordField maxHeight="40.0" maxWidth="625.0" minHeight="40.0" prefHeight="40.0" prefWidth="625.0" />
            <Region prefHeight="200.0" prefWidth="219.5" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <Region prefHeight="10.0" prefWidth="600.0" />
      <HBox prefHeight="80.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <VBox alignment="CENTER" prefHeight="80.0" prefWidth="320.0">
               <children>
                  <Button fx:id="devLogin" mnemonicParsing="false" onAction="#login" styleClass="bigButton" text="Login Developer">
                     <font>
                        <Font size="20.0" />
                     </font></Button>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="80.0" prefWidth="320.0">
               <children>
                  <Button fx:id="projectOwnerLogin" mnemonicParsing="false" onAction="#login" styleClass="bigButton" text="Login Project Owner">
                     <font>
                        <Font size="20.0" />
                     </font></Button>
               </children>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox prefHeight="80.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
         <children>
            <Region prefHeight="49.0" prefWidth="194.0" HBox.hgrow="ALWAYS" />
            <VBox alignment="CENTER" prefHeight="80.0" prefWidth="375.0">
               <children>
                  <Button fx:id="createAccount" mnemonicParsing="false" onAction="#login" styleClass="bigButton" text="Create New Account" HBox.hgrow="ALWAYS">
                     <font>
                        <Font size="20.0" />
                     </font></Button>
               </children>
            </VBox>
            <Region prefHeight="49.0" prefWidth="194.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </children>
</VBox>
