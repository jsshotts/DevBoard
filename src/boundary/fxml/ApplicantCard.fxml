<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="TOP_CENTER" maxHeight="70.0" minHeight="70.0" prefHeight="70.0" spacing="40.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="boundary.ApplicantCard">
   <children>
      <VBox alignment="CENTER" prefWidth="120.0">
         <children>
            <Label fx:id="devName" prefHeight="32.0" text="Name">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font></Label>
         </children>
      </VBox>
      <VBox alignment="CENTER" prefHeight="60.0" prefWidth="180.0">
         <children>
            <Button fx:id="viewProfile" mnemonicParsing="false" onAction="#viewProfile" text="View Profile" />
         </children>
      </VBox>
      <VBox alignment="CENTER" prefHeight="60.0" prefWidth="180.0">
         <children>
            <Button fx:id="sendOffer" layoutX="100.0" layoutY="20.0" mnemonicParsing="false" onAction="#sendOffer" text="Send Offer" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</HBox>
